<div style="width: auto; height: auto">
	<div data-dojo-type="dijit/form/Form" data-dojo-id="userMgSearchForm" encType="multipart/form-data" style="width: 100%; height: 30%;">
		<script type="dojo/on" data-dojo-event="show">
            require([
             	"dojo/data/ObjectStore"
            ], function(ObjectStore){
        		var userTypes = dijit.byId("userMgSearchForm_type");
        		userTypes.set("store",ObjectStore({objectStore: userTypesStore}));
    			userTypes.set("value", "UserType_1");
            });

            require([
             	"dojo/store/JsonRest",
				"dojo/store/Memory",
				"dojo/store/Cache",
				"dojox/grid/DataGrid",
				"dojo/data/ObjectStore",
				"dojox/grid/cells",
				"dojox/grid/_CheckBoxSelector"
            ], function(JsonRest,Memory,Cache,DataGrid,ObjectStore,Cells,CheckBoxSelector){
                myStore = Cache(  
                    JsonRest({
        				target:"dojo/getUsersPagedAction", 
        				headers: {"Content-Type": "application/json"}, 
        				idProperty: "id",
        				}),   
                    Memory({ idProperty: "id" })
				);
                dojo.ready(function(){
              		var cells = [[
                        new Cells.RowIndex({
                            width : "4%"
                        }),
        				{name:"用户名", field:"account", width: "30%"},
                        {name:"名字", field:"name", editable: true, width: "30%"},
                        {name:"类型", field:"typeName", width: "30%"}	
        			]];
        			gridLayout = [{
        					type: "dojox.grid._CheckBoxSelector", width: "4%"
        				}, 
        				cells
        			];
                    grid = new DataGrid({
                    	store: dataStore = ObjectStore({objectStore: myStore}),
                    	query: "",
                        structure: gridLayout,
        				rowSelector: '2%',
        				selectionMode: 'multiple',
        				rowsPerPage: 100,
        				autoHeight: "5"
                    }, "gridDiv");
        			grid.startup();
                });
            });
    	</script>
		<table style="width: 100%; height: 100%;">
			<tr>
	            <td>
	                <label for="type">用户类型:</label>
	            </td>
	            <td>
					<input data-dojo-type="dijit/form/Select" labelAttr="name" name="type" id="userMgSearchForm_type"/>
	            </td>
	            <td>
	                <label for="name">名字:</label>
	            </td>
	            <td>
	                <input type="text" id="userMgSearchForm_name" name="name" data-dojo-type="dijit/form/ValidationTextBox" data-dojo-type="dijit/form/ValidationTextBox" data-dojo-props="maxLength:60, regExp:'[A-Za-z0-9\-\u4e00-\u9fa5]*', invalidMessage:'支持:中文,英文,数字,-'"/>
	            </td>
	        </tr>
	        <tr>
	        	<td>
				    <button data-dojo-type="dijit/form/Button" id="searchBtn" type="button">查询
						<script type="dojo/on" data-dojo-event="click">
							grid.setQuery(userMgSearchForm.get("value"));
                    	</script>
					</button>
	        	</td>
	        	<td></td>
	        	<td></td>
	        	<td></td>
	        </tr>
	    </table>
    </div>
    <div id="gridDiv" style="width: 100%; height: 50%;">
	</div>
    <div id="editMode">
        <div data-dojo-type="dijit/Dialog" id="addUserDialog" title="添加用户" href="LoadAddUserDialog.do">
        </div>
        <button data-dojo-type="dijit/form/Button" id="addButton">
        	<span>添加</span>
        	<script type="dojo/on" data-dojo-event="click">                
				if(dijit.byId("addUserDialog").isLoaded){
					dijit.byId("addUserDialog").show();
					dijit.byId("addUserDialog").refresh();
				}else{
					dijit.byId("addUserDialog").show();
				}
        	</script>
        </button>
        <div data-dojo-type="dijit/Dialog" id="editUserDialog" title="编辑用户" href="">
        </div>
	    <button data-dojo-type="dijit/form/Button" id="editButton" type="button">编辑
			<script type="dojo/on" data-dojo-event="click">
				var items = grid.selection.getSelected();
                if (items.length == 0) {
                    alert("请选择需要编辑的用户。");
                }else if (items.length > 1) {
					alert("只能选择一个用户。");
				}else{
					var account = items[0].account;
					dijit.byId("editUserDialog").href="LoadEditUserDialog.do?account=" + account;
    				if(dijit.byId("editUserDialog").isLoaded){
    					dijit.byId("editUserDialog").show();
    					dijit.byId("editUserDialog").refresh();
    				}else{
    					dijit.byId("editUserDialog").show();
    				}
				}
        	</script>
		</button>
	    <button data-dojo-type="dijit/form/Button" id="removeButton" type="button" style="display:none;">删除
			<script type="dojo/on" data-dojo-event="click">
                var items = grid.selection.getSelected();
                if (items.length) {
                    dojo.forEach(items, function (selectedItem) {
                        if (selectedItem !== null) {
                            dataStore.deleteItem(selectedItem);
                        }
                    });
					saveTable();
                }else{
					alert("请选择需要删除的用户。");
				}
                var onSave = function(){
                	dojo.byId("message").innerHTML = ("Save done.");
                }
                var onSaveError = function(error){
                	alert("Error occurred.");
                }
                function saveTable() {
                    if (grid.edit.isEditing()) {
                    	grid.edit.apply();
                    }
                    if (dataStore.isDirty()) {
                    	var result = dataStore.save({onComplete: onSave, onError: onSaveError});
                    }
                }
        	</script>
		</button>
    </div>
	<div id="message">
	</div>
</div>